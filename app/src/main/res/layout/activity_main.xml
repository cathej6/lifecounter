            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/player1score" />

    </LinearLayout>

    <LinearLayout

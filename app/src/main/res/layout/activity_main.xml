            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+5"
            android:id="@+id/player1plus5"/>
        <Space
            android:layout_width="10pt"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:id="@+id/player1plus"/>
        <Space
            android:layout_width="10pt"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:id="@+id/player1minus"/>
        <Space
            android:layout_width="10pt"
